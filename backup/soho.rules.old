# Generated by Daniel Rivero on Wed 30 2018
*filter
:INPUT DROP [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
# INPUT RULES
# Accept loopback ingoing traffic
-A INPUT -i lo -j ACCEPT
-A INPUT -s 127.0.0.0/8 ! -i lo -j REJECT --reject-with icmp-port-unreachable
# Accept limited icmp ingoing traffic
-A INPUT -p icmp -m state --state NEW -m icmp --icmp-type 8 -j ACCEPT
-A INPUT -p icmp -m state --state RELATED,ESTABLISHED -j ACCEPT
# Accept SSH port connections 
-A INPUT -p tcp -m state --state NEW,ESTABLISHED -m tcp --dport 22 -j ACCEPT
# Accept Domain name resolve 
-A INPUT -p tcp -m state --state ESTABLISHED -m tcp --sport 53 -j ACCEPT
-A INPUT -p udp -m udp --sport 53 -j ACCEPT
-A INPUT -p udp -m udp --dport 53 -j ACCEPT
# Accept network time protocol 
-A INPUT -p udp -m udp --sport 123 -j ACCEPT
# Accept HTTPS name resolve 
-A INPUT -p tcp -m state --state ESTABLISHED -m tcp --sport 443 -j ACCEPT
-A INPUT -p tcp -m state --state NEW,ESTABLISHED -m tcp --dport 443 -j ACCEPT
# Allow port 19999/tcp for device monitoring via browser using netdata
-A INPUT -p tcp -m tcp --dport 19999 -j ACCEPT
# limit number of packages per minute 
-A INPUT -m limit --limit 1000/min -j LOG --log-prefix "iptables_INPUT_denied: "
-A INPUT -j REJECT --reject-with icmp-port-unreachable
# Log all dropped ingoing traffic
-A INPUT -j LOG --log-prefix="BAD_INPUT:"
-A INPUT -j DROP
# FORWARD RULES
-A FORWARD -m limit --limit 10000/min -j LOG --log-prefix "iptables_FORWARD_denied: "
#-A FORWARD -j REJECT --reject-with icmp-port-unreachable
# Accept loopback outgoing traffic
-A OUTPUT -o lo -j ACCEPT
# Accept icmp outgoing traffic
-A OUTPUT -p icmp -j ACCEPT
-A OUTPUT -p udp -m udp --dport 53 -j ACCEPT
-A OUTPUT -p udp -m udp --sport 53 -j ACCEPT
-A OUTPUT -p tcp -m state --state NEW,ESTABLISHED -m tcp --sport 53 -j ACCEPT
-A OUTPUT -p udp -m udp --dport 123 -j ACCEPT
-A OUTPUT -p tcp -m state --state NEW,ESTABLISHED -m tcp --sport 22 -j ACCEPT
-A OUTPUT -p tcp -m state --state NEW,ESTABLISHED -m tcp --dport 443 -j ACCEPT
-A OUTPUT -p tcp -m state --state ESTABLISHED -m tcp --dport 443 -j ACCEPT
-A OUTPUT -m limit --limit 1000/min -j LOG --log-prefix "iptables_OUTPUT_denied: "
-A OUTPUT -j REJECT --reject-with icmp-port-unreachable
# Log all dropped outgoing traffic
-A OUTPUT -j LOG --log-prefix="BAD_OUTPUT:"
#-A OUTPUT -j DROP
COMMIT
# nat rules
*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
# masquerate the private network
# POSTROUTING RULES
-A POSTROUTING -s 192.168.2.0/27 -o eth0 -j MASQUERADE
# PREROUTING RULES
# redirect all DNS queries to the router
-A PREROUTING ! -s 192.168.2.1 ! -d 192.168.2.1/32 -p tcp -m tcp --dport 53 -j DNAT --to-destination 192.168.2.1:53
-A PREROUTING ! -s 192.168.2.1/32 ! -d 192.168.2.1/32 -p udp -m udp --dport 53 -j DNAT --to-destination 192.168.2.1:53
COMMIT
